const TypeOfObject = "object";
const TypeOfString = "string";

exports.isObject = function(obj) {
    return (typeof(obj) === TypeOfObject) && !Array.isArray(obj)
};

exports.isArray = function(arr) {
    return Array.isArray(arr)
};

exports.isString = function (str) {
    return typeof(str) === TypeOfString;
};

exports.compareTypes = function(var1, var2) {
    if (typeof(var1) !== TypeOfObject) {
        if (typeof(var1) === typeof(var2)) {
            return true;
        }
    } else {
        const isVar1Array = this.isArray(var1);
        const isVar2Array = this.isArray(var2);
        if ((isVar1Array && isVar1Array) || (!isVar1Array && !isVar2Array)) {
            return true;
        }
    }
    return false;
};

exports.isEmpty = function(obj) {
    for(const key in obj) {
        if(obj.hasOwnProperty(key))
            return false;
    }
    return true;
};